{{>header}}

    <div class="form-container">
        <div class="form">
            <form action="login" id="login" name="login" method="post">
                <fieldset>
                    <legend class="login-head">Login</legend>
                    <p class="login-content">Please login if you're already a member</p>

                    {{!-- username --}}
                    <div class="border-bottom">
                        <label for="user" class="login-user">Username</label>
                        <span class="login-icon"><i class="fas fa-user"></i></span>
						<input type="username" id="username" name="username" placeholder="Enter your Username" size="20" class="input">
                    </div>

                    {{!-- password --}}
                    <div class="border-bottom">
                        <label for="password" class="login-user">Password</label>
                        <span class="login-icon"><i class="fas fa-key"></i></span>
						<input type="password" id="password" name="password" placeholder="password" size="20" class="input">
                    </div>

                    {{!-- forgot password --}}
                    <p class="right">
                        <a href="#">Forgot password?</a>
                    </p>

                    {{!-- submit login --}}
                    <button class="login-btn" type="submit">LOGIN</button>
                </fieldset>

                <p class="login-content2">Are you new to StatsDash?
                    <a href="/signup">Register here</a>
                </p>
            </form>
        </div>
    </div>
{{>footer}}